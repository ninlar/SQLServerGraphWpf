<Window x:Class="WPFGraphX.BlogPostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGraphX"
        mc:Ignorable="d"
        Title="BlogPostWindow" Height="450" Width="800" Icon="/Assets/AddDataItem.png" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="8" Height="28">
            <Button x:Name="LoadButton" Width="100" Content="Load" Click="LoadButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="PostGrid" />
    </DockPanel>

</Window>
